{
  "markdownlint.config": {
    "MD013": {
      "line_length": 120,
      "code_blocks": false,
      "tables": false
    },
    "MD014": false,
    "MD024": false,
    "MD026": {
      "punctuation": ".,:;!"
    }
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "editor.formatOnSave": true
}